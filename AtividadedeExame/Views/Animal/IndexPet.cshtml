@model IEnumerable<Modelo.Pet>

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>IndexPet</title>
</head>
<body>
    <p>
        @Html.ActionLink("Create New", "CreatePet")
    </p>
    <table class="table">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.nome)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.idade)
            </th>
            <th>

                @Html.DisplayNameFor(model => model.sexo)

            </th>
            <th>
                @Html.DisplayNameFor(model => model.Especie)
            </th>
        </tr>
    
    @foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.nome)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.idade)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.sexo)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.EspecieId)
        </td>
        <td>
            @Html.ActionLink("Edit", "EditPet", new { id = item.PetId }) |
            @Html.ActionLink("Details", "DetailsPet", new { id = item.PetId }) |
            @Html.ActionLink("Delete", "DeletePet", new { id = item.PetId })
        </td>
    </tr>
    }
    
    </table>
</body>
</html>
